<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Internal Search Tools</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        
        body {
            font-family: Arial, sans-serif;
            background: #1a1a2e;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        canvas {
            position: fixed;
            top: 0;
            left: 0;
            z-index: -1;
        }

        .main-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            padding: 50px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            width: 100%;
            text-align: center;
        }
        
        .logo {
            font-size: 4em;
            margin-bottom: 20px;
        }
        
        .title {
            font-size: 2.5em;
            color: #333;
            margin-bottom: 15px;
            font-weight: 300;
        }
        
        .subtitle {
            color: #666;
            margin-bottom: 50px;
            font-size: 1.2em;
        }
        
        .buttons-container {
            display: flex;
            flex-direction: column;
            gap: 20px;
            margin: 40px 0;
        }
        
        .btn {
            display: block;
            padding: 20px 40px;
            font-size: 1.2em;
            font-weight: 600;
            text-decoration: none;
            border-radius: 15px;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }
        
        .btn:hover {
            transform: translateY(-3px);
        }
        
        .btn-sales {
            background: linear-gradient(135deg, #ffc107 0%, #ff9800 100%);
            color: white;
            box-shadow: 0 10px 25px rgba(255, 193, 7, 0.3);
        }
        
        .btn-sales:hover {
            box-shadow: 0 15px 35px rgba(255, 193, 7, 0.4);
        }
        
        .btn-dnc {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            color: white;
            box-shadow: 0 10px 25px rgba(40, 167, 69, 0.3);
        }
        
        .btn-dnc:hover {
            box-shadow: 0 15px 35px rgba(40, 167, 69, 0.4);
        }

        .btn-suppression {
            background: linear-gradient(135deg, #6c757d 0%, #343a40 100%);
            color: white;
            box-shadow: 0 10px 25px rgba(52, 58, 64, 0.3);
        }
        
        .btn-suppression:hover {
            box-shadow: 0 15px 35px rgba(52, 58, 64, 0.4);
        }
        

        .btn-info {
            background: linear-gradient(135deg, #17a2b8 0%, #21c4b4 100%);
            color: white;
            box-shadow: 0 10px 25px rgba(23, 162, 184, 0.3);
        }

        .btn-info:hover {
            box-shadow: 0 15px 35px rgba(23, 162, 184, 0.4);
        }
        
        .btn-admin {
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
            color: white;
            box-shadow: 0 10px 25px rgba(220, 53, 69, 0.3);
        }
        
        .btn-admin:hover {
            box-shadow: 0 15px 35px rgba(220, 53, 69, 0.4);
        }
        
        .btn-icon {
            font-size: 1.3em;
            margin-right: 10px;
        }
        
        .footer {
            margin-top: 40px;
            padding-top: 30px;
            border-top: 1px solid #e0e0e0;
            color: #666;

        }
        
        @media (max-width: 768px) {
            .main-container { padding: 30px; }
            .title { font-size: 2em; }
            .btn { padding: 15px 30px; font-size: 1.1em; }
        }
    </style>
</head>
<body>
      <canvas id="rainCanvas"></canvas>
    <div class="main-container">
        <div class="logo">üìû</div>
        <h1 class="title"><strong>Brighting Solutions</strong></h1>
        <p class="subtitle">Data Verification & Processing</p>
        
        <div class="buttons-container">
            <a href="{{ url_for('suppression_search') }}" class="btn btn-suppression">
                <span class="btn-icon">üîç</span>
                Combined Search (with Suppression)
            </a>

            <a href="{{ url_for('tcpa_search') }}" class="btn btn-info">
                <span class="btn-icon">üïµÔ∏è</span>
                DNC 2025 Live Search
            </a>

            <a href="{{ url_for('dnc_search') }}" class="btn btn-dnc">
                <span class="btn-icon">üö´</span>
                Legacy DNC-Only Search
            </a>

            <a href="{{ url_for('sales_search') }}" class="btn btn-sales">
                <span class="btn-icon">‚ö°</span>
                Sales Search
            </a>
            
            <a href="{{ url_for('admin_login') }}" class="btn btn-admin">
                <span class="btn-icon">‚öôÔ∏è</span>
                Admin Dashboard
            </a>
        </div>
        
        <div class="footer">
            <div>IT Department (C) Brighting Solutions</div>
        </div>
    </div>

    <script>
    const canvas = document.getElementById('rainCanvas');
const ctx = canvas.getContext("2d");

canvas.width = window.innerWidth;
canvas.height = window.innerHeight;

window.addEventListener("resize", () => {
  canvas.width = window.innerWidth;
  canvas.height = window.innerHeight;
});

// === ELEMENTOS ===

// Olas del mar
const waves = Array.from({ length: 5 }, (_, i) => ({
  amp: 10 + i * 10,
  speed: 0.002 + i * 0.001,
  offset: Math.random() * 1000,
  color: `rgba(0,100,200,${0.25 + 0.15 * i})`,
  yBase: canvas.height * 0.55 + i * 20
}));

// Palmeras en peque√±as islitas
const palms = Array.from({ length: 3 }, (_, i) => ({
  x: 200 + i * 300,
  height: 130 + Math.random() * 40,
  sway: Math.random() * Math.PI * 2
}));

// Lanchas
const boats = Array.from({ length: 3 }, (_, i) => ({
  x: Math.random() * canvas.width,
  y: canvas.height * 0.6 + i * 20,
  speed: 0.5 + Math.random(),
  bob: Math.random() * Math.PI * 2
}));

// Palomas
const birds = Array.from({ length: 14 }, () => ({
  x: Math.random() * canvas.width,
  y: 80 + Math.random() * 160,
  speed: 1 + Math.random() * 1.5,
  flap: Math.random() * Math.PI * 2
}));

// === FUNCIONES ===

function drawSky(time) {
  // Cielo caribe√±o
  const grad = ctx.createLinearGradient(0, 0, 0, canvas.height);
  grad.addColorStop(0, "#81d4fa"); // azul cielo claro
  grad.addColorStop(1, "#fefbd8"); // tono c√°lido dorado
  ctx.fillStyle = grad;
  ctx.fillRect(0, 0, canvas.width, canvas.height);

  // Sol brillante
  const sunX = canvas.width - 200;
  const sunY = 120;
  const sunGrad = ctx.createRadialGradient(sunX, sunY, 30, sunX, sunY, 100);
  sunGrad.addColorStop(0, "rgba(255,255,180,1)");
  sunGrad.addColorStop(1, "rgba(255,255,180,0)");
  ctx.fillStyle = sunGrad;
  ctx.beginPath();
  ctx.arc(sunX, sunY, 100, 0, Math.PI * 2);
  ctx.fill();
}

function drawSea(time) {
  for (let w of waves) {
    ctx.beginPath();
    ctx.moveTo(0, w.yBase);
    for (let x = 0; x < canvas.width; x++) {
      const y = w.yBase + Math.sin(x * 0.02 + time * w.speed + w.offset) * w.amp;
      ctx.lineTo(x, y);
    }
    ctx.lineTo(canvas.width, canvas.height);
    ctx.lineTo(0, canvas.height);
    ctx.closePath();
    ctx.fillStyle = w.color;
    ctx.fill();
  }
}

function drawIslets(time) {
  // Peque√±as islitas bajo las palmeras
  for (let p of palms) {
    const baseY = canvas.height * 0.55 + Math.sin(time / 800 + p.x * 0.01) * 3;
    ctx.fillStyle = "#e8c97f";
    ctx.beginPath();
    ctx.ellipse(p.x, baseY + 10, 50, 12, 0, 0, Math.PI * 2);
    ctx.fill();
  }
}

function drawPalms(time) {
  for (let p of palms) {
    const sway = Math.sin(time / 1000 + p.sway) * 5;
    const baseY = canvas.height * 0.55;

    // Tronco
    ctx.strokeStyle = "#4b2e05";
    ctx.lineWidth = 10;
    ctx.beginPath();
    ctx.moveTo(p.x, baseY);
    ctx.quadraticCurveTo(p.x + sway, baseY - p.height / 2, p.x + sway, baseY - p.height);
    ctx.stroke();

    // Hojas
    ctx.strokeStyle = "#1c9c4b";
    ctx.lineWidth = 4;
    for (let i = 0; i < 5; i++) {
      const angle = (-Math.PI / 2) + (i - 2) * 0.4 + sway * 0.02;
      const length = 50 + Math.random() * 10;
      ctx.beginPath();
      ctx.moveTo(p.x + sway, baseY - p.height);
      ctx.lineTo(
        p.x + sway + Math.cos(angle) * length,
        baseY - p.height + Math.sin(angle) * length
      );
      ctx.stroke();
    }
  }
}

function drawBoats(time) {
  for (let b of boats) {
    b.x += b.speed;
    b.bob += 0.02;

    if (b.x > canvas.width + 100) b.x = -100;

    const bobY = Math.sin(b.bob) * 5;
    const y = b.y + bobY;

    // Cuerpo del bote
    ctx.fillStyle = "#d24c2e";
    ctx.beginPath();
    ctx.moveTo(b.x - 30, y);
    ctx.lineTo(b.x + 30, y);
    ctx.lineTo(b.x + 20, y + 10);
    ctx.lineTo(b.x - 20, y + 10);
    ctx.closePath();
    ctx.fill();

    // Pescador
    ctx.fillStyle = "#222";
    ctx.beginPath();
    ctx.arc(b.x, y - 10, 4, 0, Math.PI * 2);
    ctx.fill();
    ctx.fillRect(b.x - 1, y - 10, 2, 8);

    // Ca√±a
    ctx.strokeStyle = "#222";
    ctx.beginPath();
    ctx.moveTo(b.x + 2, y - 10);
    ctx.lineTo(b.x + 25, y - 35);
    ctx.stroke();
  }
}

function drawBirds(time) {
  for (let bird of birds) {
    bird.x += bird.speed;
    bird.y += Math.sin(time / 400 + bird.x / 100) * 0.5;
    bird.flap += 0.3;

    if (bird.x > canvas.width + 30) {
      bird.x = -30;
      bird.y = 80 + Math.random() * 150;
    }

    ctx.strokeStyle = "#444";
    ctx.lineWidth = 2;
    ctx.beginPath();
    ctx.moveTo(bird.x - 5, bird.y);
    ctx.quadraticCurveTo(bird.x, bird.y - Math.sin(bird.flap) * 8, bird.x + 5, bird.y);
    ctx.stroke();
  }
}

// === LOOP ===
function draw(time) {
  drawSky(time);
  drawSea(time);
  drawIslets(time);
  drawPalms(time);
  drawBoats(time);
  drawBirds(time);
  requestAnimationFrame(draw);
}

requestAnimationFrame(draw);
</script>



</body>
</html>

